    {
        "schema" : "http://json-schema.org/draft-07/schema#",
        "title" : "Test Generation Config",
        "type" : "object",
        "properties": {
            "language": { 
                "type": "string",       
                "enum": ["java","python","javascript"],
                "_comment" : "choose a language of 3 to write test casses"
            },
            "framework" : {
                "type" : "string",
                "description" : "framework must be specific to language"
            },
            "testing_tool" : {
                "type" : "string",
                "description" : "tools like Postman, curl, Jmeter, curl, etc"
            },
            "base_url" : {"type" : "string"},
            "pre_test_all" : {
                "type" : "object",
                "description" : "eg login and save token, fetch credentials from CI/CD",
                "properties" : {
                    "implementation_details" : {"type" : "string"}
                },
                "additionalProperties" : true
            },
            "pre_test_tagged" : {
                "type" : "object",
                "properties" : {
                    "tagged" : {
                        "type" : "array",
                        "items" : {
                            "type" : "object",
                            "description" : "empty tagged array means none",
                            "properties" : {
                                "tag" : {
                                    "type" : "string"
                                },
                                "sub_tag" : {
                                    "type" : "array",
                                    "description" : "no subtags mean all",
                                    "items" : {
                                        "type" : "string"
                                    }
                                } 
                            }
                        }
                    }
                    
                },
                "additionalProperties" : true},
            "pre_test_each" : {"type" : "object","additionalProperties" : true},
            "post_test_all" : {"type" : "object","additionalProperties" : true},
            "post_test_each" : {"type" : "object","additionalProperties" : true},
            "post_test_tagged" : {"type" : "object","additionalProperties" : true},
            "tests" : {
                "type" : "array",
                "items" : {
                    "description" : "define your test",
                    "type" : "object",
                    "properties" : {
                        "name" : {"type" : "string"},
                        "tag" : {
                            "type" : "string",
                            "description" : "use to identify pre and post tests"
                        },
                        "depends_on" : {"type" : "array"},
                        "method" : {
                            "type" : "string",
                            "enum" : ["GET", "POST", "DELETE", "PUT", "PATCH", "HEAD", "TRACE", "OPTIONS", "CONNECT"]
                        },
                        "endpoint" : {"type" : "string"},
                        "auth": {
                            "type" : "object",
                            "properties" : {
                                "auth_type" : {"type" : "string"},
                                "token_env" : {"type" : "string"},
                                "header_name" : {"type" : "string"}
                            },
                            "additionalProperties" : true
                        },
                        "path_params" :{
                            "type" : "object",
                            "additionalProperties" : "true"
                        },
                        "query_params" : {
                            "type" : "object",
                            "additionalProperties" : "true"
                        },
                        "headers" : {
                            "type" : "object",
                            "additionalProperties" : "true"
                        },
                        "request_body_meta" : {
                            "type" : "object",
                            "description" : "JSON object write your request body, must match openAPI specs",
                            "additionalProperties" : true
                        },
                        "request_body_source" : {
                            "type" : "object",
                            "description" : "source of data, could be txt file or db",
                            "properties" : {
                                "save": {"type" : "object"}
                            },
                            "additionalProperties" : true
                        },
                        "gen_sample_data" : {
                            "type" : "boolean"
                        },
                        "assertions" : {
                            "type" :"array",
                            "items" : {
                                "type" : "object",
                                "additionalProperties" : true
                            }
                        },
                        "retry_timeout" : {
                            "type" : "object",
                            "properties": {
                                "max_attemps" : {"type"  : "number"},
                                "backoff" : {"type" : "number"},
                                "timeout" : {"type" : "number"}
                            }
                        },
                        "variations" : {
                            "type" : "array",
                            "description" : "",
                            "items" : {
                                "type" : "object",
                                "properties" : {
                                    "details" : {"type" : "string"},
                                    "kind" : {
                                        "type" : "string",
                                        "enum" : ["positive", "egde", "negative"]
                                    },
                                    "sub_tag" : {"type" : "string"},
                                    "change_field" : {
                                        "type" : "array",
                                        "items" : {
                                            "type" : "object",
                                            "properties" : {
                                                "field" : {"type" : "string"},
                                                "change_to" : {}
                                            }
                                        }
                                    },
                                    "extra_field" : {
                                        "type" : "array",
                                        "items" : {
                                            "type" : {}
                                        }
                                    },
                                    "time_responce" : {
                                        "type" : "object",
                                        "properties" : {
                                            "time" : {"type" : "number"}
                                        },
                                        "additionalProperties" : true
                                    },
                                    "change_method" : {"type" : "string"},
                                    "expected_responce" : {
                                        "type" : "object",
                                        "properties" : {
                                            "status_code" : {"type" : "number"},
                                            "schema_validation" : {"type" : "boolean"},
                                            "responce_body" : {
                                                "type" : "object",
                                                "additionalProperties" :true
                                            },
                                            "header_contains" : {
                                                "type" : "object",
                                                "additionalProperties" :true
                                            },
                                            "max_responce_time_ms" : {"type" : "number"}
                                        }
                                    },

                                    "sub_order" : {
                                        "type" : "integer",
                                        "description" : "must be unique",
                                        "minimum" : 0 
                                    }
                                }
                            }
                        },
                        "order" : {
                            "type" : "integer",
                            "minimum" : 0,
                            "description" : "must be unique"
                        }
                    },
                    "required" : ["method", "endpoint"]
                }
            }
        },
        "required" : ["base_url"],
        "_commments" : ["",
                        "request ought to be send through language specific frameworks or tools like Postman"],
        "oneOf" : [
            {
                "required": ["language","framework"],
                "not" : {
                    "required":["testing_tool"]
                }
            },
            {
                "required":["testing_tool"],
                "not" : {
                    "required" : ["language","framework"]
                }
            }
        ]
    }